<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shubhamchauhan.myapplication.CreateComplaintFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cambo"
                    android:text="Select Category"
                    android:textSize="16sp" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/edtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/cambo"
                    android:hint="Title"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cambo"
                    android:text="Description" />

                <EditText
                    android:id="@+id/edtDesciption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:fontFamily="@font/cambo"
                    android:hint="Enter Description"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="12"
                    android:minLines="2"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_action_calender"

                        android:drawablePadding="8dp"
                        android:ems="10"
                        android:fontFamily="@font/cambo"
                        android:gravity="fill_vertical"
                        android:hint="Date" />

                    <EditText
                        android:id="@+id/edtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_action_clock"
                        android:drawablePadding="8dp"
                        android:ems="10"
                        android:fontFamily="@font/cambo"
                        android:gravity="fill_vertical"
                        android:hint="Time" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"

                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:clickable="true"
                        android:contentDescription="Attach Image"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/ic_launcher_foreground7" />

                    <ImageButton
                        android:id="@+id/attachBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_action_attach" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/locationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@color/text_color_primary"
                        app:srcCompat="@drawable/ic_action_name" />

                    <EditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:ems="10"
                        android:fontFamily="@font/cambo"
                        android:hint="Add a Location"
                        android:inputType="textPersonName|textPostalAddress" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/aknCheckbox"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/cambo"
                    android:inputType="textMultiLine"
                    android:text="I agree to that the information provided is true to my knowledge and that I am fully liable for its authenticity." />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>
